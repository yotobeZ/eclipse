<script type="text/javascript">
function add(){
	$.ajax({
		url:"add.jsp",
	    type:"post",
	    dataType:"html",
	    async:false,
	    data:{
	    	"sname":$("#sname").val(),
	    	"sage":$("#sage").val,
	    	
	    },
	success:function(data){
		$("#llan").html(data);
	}
	})

}
</script>
